{
  "productName": "Mindful Touch",
  "version": "0.1.0",
  "identifier": "com.mindfultouch",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "Mindful Touch",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "externalBin": [
      "bin/mindful-touch-backend"
    ],
    "publisher": "Nikos Maniatis",
    "category": "Productivity",
    "shortDescription": "A gentle awareness tool for mindful hand movement tracking",
    "longDescription": "Mindful Touch helps you become more aware of unconscious face-touching habits by providing gentle notifications when your hands approach specific facial regions."
  }
}